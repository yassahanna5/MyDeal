        };

        // Real-time update simulation
        function simulateRealTimeUpdates() {
            // Check for updates every 3 seconds
            setInterval(() => {
                const lastUpdate = localStorage.getItem(STORAGE_KEYS.LAST_UPDATE);
                const currentProducts = getProducts();
                
                // If there's a new update, refresh the UI
                if (lastUpdate && lastUpdate !== getLastUpdateTimestamp()) {
                    showNotification('Product catalog updated!');
                    loadProductsIntoUI();
                    setLastUpdateTimestamp();
                }
            }, 3000);
        }

        // Show notification
        function showNotification(message, isError = false) {
            const notification = document.getElementById('realtime-notification');
            const notificationText = document.getElementById('notification-text');
            
            notificationText.textContent = message;
            
            if (isError) {
                notification.classList.add('error');
            } else {
                notification.classList.remove('error');
            }
            
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // Set last update timestamp
        function setLastUpdateTimestamp() {
            localStorage.setItem(STORAGE_KEYS.LAST_UPDATE, new Date().toISOString());
        }

        // Get last update timestamp
        function getLastUpdateTimestamp() {
            return localStorage.getItem(STORAGE_KEYS.LAST_UPDATE);
        }

        // Initialize data from localStorage or use defaults
        function initializeData() {
            if (!localStorage.getItem(STORAGE_KEYS.PRODUCTS)) {
                localStorage.setItem(STORAGE_KEYS.PRODUCTS, JSON.stringify(defaultProducts));
                setLastUpdateTimestamp();
            }
            
            if (!localStorage.getItem(STORAGE_KEYS.CART)) {
                localStorage.setItem(STORAGE_KEYS.CART, JSON.stringify([]));
            }
            
            updateCartDisplay();
            loadProductsIntoUI();
            simulateRealTimeUpdates();
        }

        // Get products from localStorage
        function getProducts() {
            return JSON.parse(localStorage.getItem(STORAGE_KEYS.PRODUCTS)) || {};
        }

        // Save products to localStorage and notify all users
        function saveProducts(products) {
            localStorage.setItem(STORAGE_KEYS.PRODUCTS, JSON.stringify(products));
            setLastUpdateTimestamp(); // This will trigger updates for all users
            
            // In a real application, you would send this to a server
            // For this demo, we're simulating with localStorage
            loadProductsIntoUI();
        }

        // Get cart from localStorage
        function getCart() {
            return JSON.parse(localStorage.getItem(STORAGE_KEYS.CART)) || [];
        }

        // Save cart to localStorage
        function saveCart(cart) {
            localStorage.setItem(STORAGE_KEYS.CART, JSON.stringify(cart));
            updateCartDisplay();
        }

        // Add product to cart
        function addToCart(productDetails) {
            const cart = getCart();
            cart.push(productDetails);
            saveCart(cart);
        }

        // Update cart display
        function updateCartDisplay() {
            const cart = getCart();
            const cartCount = document.querySelector('.cart-count');
            const cartTotal = document.querySelector('.cart-total');
            
            // Update cart count
            cartCount.textContent = cart.length;
            
            // Calculate and update cart total
            const total = cart.reduce((sum, item) => sum + parseFloat(item.totalPrice), 0);
            cartTotal.textContent = `$${total.toFixed(2)}`;
        }

        // Load products into the UI dropdowns
        function loadProductsIntoUI() {
            const products = getProducts();
            const categorySelect = document.getElementById('product-category');
            
            // Clear existing options
            categorySelect.innerHTML = '<option value="">Select a category</option>';
            
            // Add categories to dropdown
            Object.keys(products).forEach(category => {
                const option = document.createElement('option');
                option.value = category;
                option.textContent = category.charAt(0).toUpperCase() + category.slice(1);
                categorySelect.appendChild(option);
            });
            
            // Also update the admin product list
            updateAdminProductList();
        }

        // Update admin product list
        function updateAdminProductList() {
            const products = getProducts();
            const adminProductList = document.getElementById('admin-product-list');
            
            adminProductList.innerHTML = '';
            
            Object.keys(products).forEach(category => {
                Object.keys(products[category]).forEach(productKey => {
                    const product = products[category][productKey];
                    
                    const productCard = document.createElement('div');
                    productCard.className = 'product-card';
                    productCard.innerHTML = `
                        <h4>${product.name}</h4>
                        <p>Category: ${category}</p>
                        <p>Base Price: $${product.basePrice}</p>
                        <p>Lengths: ${product.lengths.join(', ')}</p>
                        <p>Widths: ${product.widths.join(', ')}</p>
                        <div class="product-actions">
                            <button class="btn btn-warning edit-product" data-category="${category}" data-product="${productKey}">Edit</button>
                            <button class="btn btn-danger delete-product" data-category="${category}" data-product="${productKey}">Delete</button>
                        </div>
                    `;
                    
                    adminProductList.appendChild(productCard);
                });
            });
            
            // Add event listeners for edit and delete buttons
            document.querySelectorAll('.edit-product').forEach(button => {
                button.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    const productKey = this.getAttribute('data-product');
                    editProduct(category, productKey);
                });
            });
            
            document.querySelectorAll('.delete-product').forEach(button => {
                button.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    const productKey = this.getAttribute('data-product');
                    deleteProduct(category, productKey);
                });
            });
        }

        // Edit product
        function editProduct(category, productKey) {
            const products = getProducts();
            const product = products[category][productKey];
            
            // Populate form with product data
            document.getElementById('new-product-name').value = product.name;
            document.getElementById('new-product-category').value = category;
            document.getElementById('new-product-baseprice').value = product.basePrice;
            document.getElementById('new-product-lengths').value = product.lengths.join(',');
            document.getElementById('new-product-widths').value = product.widths.join(',');
            
            // Change button text to "Update Product"
            const addButton = document.getElementById('add-product-btn');
            addButton.textContent = 'Update Product';
            addButton.onclick = function() {
                updateProduct(category, productKey);
            };
        }

        // Update product
        function updateProduct(oldCategory, productKey) {
            const products = getProducts();
            const newCategory = document.getElementById('new-product-category').value;
            const name = document.getElementById('new-product-name').value;
            const basePrice = parseFloat(document.getElementById('new-product-baseprice').value);
            const lengths = document.getElementById('new-product-lengths').value.split(',').map(l => parseInt(l.trim()));
            const widths = document.getElementById('new-product-widths').value.split(',').map(w => parseInt(w.trim()));
            
            // Remove from old category if category changed
            if (oldCategory !== newCategory) {
                delete products[oldCategory][productKey];
                // If category is empty, remove it
                if (Object.keys(products[oldCategory]).length === 0) {
                    delete products[oldCategory];
                }
            }
            
            // Add to new category
            if (!products[newCategory]) {
                products[newCategory] = {};
            }
            
            // Generate a new key based on the name if category changed
            const newProductKey = oldCategory !== newCategory ? 
                name.toLowerCase().replace(/\s+/g, '-') : productKey;
            
            products[newCategory][newProductKey] = {
                name,
                basePrice,
                lengths,
                widths,
                priceMultiplier: 1
            };
            
            saveProducts(products);
            resetProductForm();
            
            // Show success message
            showNotification('Product updated successfully! Changes will appear for all users.');
        }

        // Delete product
        function deleteProduct(category, productKey) {
            if (confirm('Are you sure you want to delete this product?')) {
                const products = getProducts();
                delete products[category][productKey];
                
                // If category is empty, remove it
                if (Object.keys(products[category]).length === 0) {
                    delete products[category];
                }
                
                saveProducts(products);
                showNotification('Product deleted successfully! Changes will appear for all users.');
            }
        }

        // Reset product form
        function resetProductForm() {
            document.getElementById('new-product-name').value = '';
            document.getElementById('new-product-category').value = '';
            document.getElementById('new-product-baseprice').value = '';
            document.getElementById('new-product-lengths').value = '';
            document.getElementById('new-product-widths').value = '';
            
            const addButton = document.getElementById('add-product-btn');
            addButton.textContent = 'Add Product';
            addButton.onclick = addNewProduct;
        }

        // Add new product
        function addNewProduct() {
            const products = getProducts();
            const category = document.getElementById('new-product-category').value;
            const name = document.getElementById('new-product-name').value;
            const basePrice = parseFloat(document.getElementById('new-product-baseprice').value);
            const lengths = document.getElementById('new-product-lengths').value.split(',').map(l => parseInt(l.trim()));
            const widths = document.getElementById('new-product-widths').value.split(',').map(w => parseInt(w.trim()));
            
            if (!category || !name || isNaN(basePrice) || lengths.length === 0 || widths.length === 0) {
                showNotification('Please fill in all fields with valid data.', true);
                return;
            }
            
            if (!products[category]) {
                products[category] = {};
            }
            
            const productKey = name.toLowerCase().replace(/\s+/g, '-');
            
            products[category][productKey] = {
                name,
                basePrice,
                lengths,
                widths,
                priceMultiplier: 1
            };
            
            saveProducts(products);
            resetProductForm();
            
            // Show success message
            showNotification('Product added successfully! Changes will appear for all users.');
        }

        // Check if admin is logged in
        function isAdminLoggedIn() {
            return localStorage.getItem(STORAGE_KEYS.ADMIN_LOGGED_IN) === 'true';
        }

        // Show admin panel if logged in
        function checkAdminAccess() {
            if (isAdminLoggedIn()) {
                document.getElementById('admin').style.display = 'block';
            } else {
                document.getElementById('admin').style.display = 'none';
            }
        }

        // DOM Elements
        const categorySelect = document.getElementById('product-category');
        const typeSelect = document.getElementById('product-type');
        const lengthSelect = document.getElementById('length');
        const widthSelect = document.getElementById('width');
        const priceDisplay = document.querySelector('.price-value');
        const selectedLengthSpan = document.getElementById('selected-length');
        const selectedWidthSpan = document.getElementById('selected-width');
        const addToCartBtn = document.getElementById('add-to-cart');
        const adminTabs = document.querySelectorAll('.admin-tab');
        const adminContents = document.querySelectorAll('.admin-content');
        const loginModal = document.getElementById('login-modal');
        const adminLink = document.getElementById('admin-link');
        const adminFooterLink = document.getElementById('admin-footer-link');
        const loginBtn = document.getElementById('login-btn');
        const logoutBtn = document.getElementById('logout-btn');
        const addProductBtn = document.getElementById('add-product-btn');
        const importExcelBtn = document.getElementById('import-excel-btn');

        // Event Listeners
        categorySelect.addEventListener('change', updateProductTypes);
        typeSelect.addEventListener('change', updateDimensions);
        lengthSelect.addEventListener('change', calculatePrice);
        widthSelect.addEventListener('change', calculatePrice);
        addToCartBtn.addEventListener('click', handleAddToCart);
        adminLink.addEventListener('click', handleAdminAccess);
        adminFooterLink.addEventListener('click', handleAdminAccess);
        loginBtn.addEventListener('click', handleLogin);
        logoutBtn.addEventListener('click', handleLogout);
        addProductBtn.addEventListener('click', addNewProduct);
        importExcelBtn.addEventListener('click', handleExcelImport);

        // Admin tab switching
        adminTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabId = tab.getAttribute('data-tab');
                
                // Update active tab
                adminTabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                // Show corresponding content
                adminContents.forEach(content => {
                    content.classList.remove('active');
                    if (content.id === `${tabId}-tab`) {
                        content.classList.add('active');
                    }
                });
            });
        });

        // Functions
        function updateProductTypes() {
            const products = getProducts();
            const category = categorySelect.value;
            
            // Reset and enable type select
            typeSelect.innerHTML = '<option value="">Select a product type</option>';
            typeSelect.disabled = !category;
            
            if (category && products[category]) {
                // Add product types based on category
                const categoryProducts = products[category];
                for (const key in categoryProducts) {
                    const product = categoryProducts[key];
                    const option = document.createElement('option');
                    option.value = key;
                    option.textContent = product.name;
                    typeSelect.appendChild(option);
                }
            }
            
            // Reset dimensions and price
            resetDimensions();
            resetPrice();
        }

        function updateDimensions() {
            const products = getProducts();
            const category = categorySelect.value;
            const type = typeSelect.value;
            
            // Reset and enable dimension selects
            lengthSelect.innerHTML = '<option value="">Select length</option>';
            widthSelect.innerHTML = '<option value="">Select width</option>';
            lengthSelect.disabled = !type;
            widthSelect.disabled = !type;
            
            if (category && type && products[category] && products[category][type]) {
                const product = products[category][type];
                
                // Add length options
                product.lengths.forEach(length => {
                    const option = document.createElement('option');
                    option.value = length;
                    option.textContent = `${length} meter${length !== 1 ? 's' : ''}`;
                    lengthSelect.appendChild(option);
                });
                
                // Add width options
                product.widths.forEach(width => {
                    const option = document.createElement('option');
                    option.value = width;
                    option.textContent = `${width} mm`;
                    widthSelect.appendChild(option);
                });
            }
            
            // Reset price
            resetPrice();
        }

        function calculatePrice() {
            const products = getProducts();
            const category = categorySelect.value;
            const type = typeSelect.value;
            const length = lengthSelect.value;
            const width = widthSelect.value;
            
            if (category && type && length && width && products[category] && products[category][type]) {
                const product = products[category][type];
                const price = (length * width * product.basePrice * product.priceMultiplier).toFixed(2);
                priceDisplay.textContent = `$${price}`;
                
                // Update selected dimensions display
                selectedLengthSpan.textContent = `${length} meter${length !== '1' ? 's' : ''}`;
                selectedWidthSpan.textContent = `${width} mm`;
                
                // Enable add to cart button
                addToCartBtn.disabled = false;
            } else {
                resetPrice();
            }
        }

        function handleAddToCart() {
            const products = getProducts();
            const category = categorySelect.value;
            const type = typeSelect.value;
            const length = lengthSelect.value;
            const width = widthSelect.value;
            
            if (category && type && length && width && products[category] && products[category][type]) {
                const product = products[category][type];
                const totalPrice = (length * width * product.basePrice * product.priceMultiplier).toFixed(2);
                
                const productDetails = {
                    category,
                    product: type,
                    productName: product.name,
                    length,
                    width,
                    basePrice: product.basePrice,
                    totalPrice: parseFloat(totalPrice),
                    timestamp: new Date().toISOString()
                };
                
                addToCart(productDetails);
                showNotification('Product added to cart!');
                
                // Reset the form
                categorySelect.value = '';
                updateProductTypes();
                resetPrice();
            }
        }

        function resetDimensions() {
            lengthSelect.innerHTML = '<option value="">Select product type first</option>';
            widthSelect.innerHTML = '<option value="">Select product type first</option>';
            lengthSelect.disabled = true;
            widthSelect.disabled = true;
            
            selectedLengthSpan.textContent = '-';
            selectedWidthSpan.textContent = '-';
        }

        function resetPrice() {
            priceDisplay.textContent = '$0.00';
            addToCartBtn.disabled = true;
        }

        function handleAdminAccess(e) {
            e.preventDefault();
            
            if (isAdminLoggedIn()) {
                document.getElementById('admin').style.display = 'block';
                window.location.href = '#admin';
            } else {
                loginModal.style.display = 'flex';
            }
        }

        function handleLogin() {
            const username = document.getElementById('admin-username').value;
            const password = document.getElementById('admin-password').value;
            
            // Simple authentication - in a real app, this would be more secure
            if (username === 'admin' && password === 'password123') {
                localStorage.setItem(STORAGE_KEYS.ADMIN_LOGGED_IN, 'true');
                loginModal.style.display = 'none';
                document.getElementById('admin').style.display = 'block';
                window.location.href = '#admin';
            } else {
                showNotification('Invalid username or password!', true);
            }
        }

        function handleLogout() {
            localStorage.setItem(STORAGE_KEYS.ADMIN_LOGGED_IN, 'false');
            document.getElementById('admin').style.display = 'none';
            showNotification('You have been logged out.');
        }

        function handleExcelImport() {
            // This is a simplified version - in a real app, you would use a library like SheetJS
            const fileInput = document.getElementById('excel-file');
            const file = fileInput.files[0];
            
            if (!file) {
                showNotification('Please select an Excel file to import.', true);
                return;
            }
            
            // For demonstration purposes, we'll just show an alert
            // In a real implementation, you would parse the Excel file and import the data
            showNotification('Excel import functionality would be implemented here. In a real application, this would parse the Excel file and import the product data.');
            
            // Reset file input
            fileInput.value = '';
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            initializeData();
            checkAdminAccess();
        });
    </script>
</body>
</html>  
